// Color mixin.
/// All colors: `c: fg bd bg;`
/// Only border-color: `c: 0 bd;`
c(x, y = 0, z = 0, xi = 1, yi = 1, zi = 1) {
    i = !important;
    if x is a 'call' or x is a 'rgba' {            color: xi is 0? x : x i }
    if y is a 'call' or y is a 'rgba' {     border-color: yi is 0? y : y i }
    if z is a 'call' or z is a 'rgba' { background-color: zi is 0? z : z i }
}

// V3.
if ( v3 == 1 ) {
// Bare RGB mixin.
/// Converts HEX to bare rrr-ggg-bbb format.
to_rgb(input) {
    unquote(slice(s('%s', rgba(input, 0)), 5, -3))
}

// Convert to SVG-friendly colors.
to_svg(input) {
    s('\%23%s', unquote(substr(s('%s', input), 1, 6)));
}

// Rounded corners.
rad() { border-radius: arguments }

t  = transparent
i  = !important
_d = darken
_l = lighten
BG = next_bg
FG = next_fg
AC = next_ac
IM = next_imsg
OM = next_omsg

// Color generator.
/// TODO: Needs more polish.
if(dark(BG)) {
    a1 =  10%; a2 =  20%; a3 =  30%; a4 =  78%; a5 =  88%;
    b1 =  10%; b2 = -05%; b3 = -10%; b4 = -15%; b5 = -20%;
    f1 = -10%; f2 =  06%; f3 =  12%; f4 =  24%; f5 =  40%;
} else {
    a1 =  10%; a2 =  15%; a3 =  30%; a4 =  60%; a5 =  70%;
    b1 = -10%; b2 =  08%; b3 =  16%; b4 =  24%; b5 =  32%;
    f1 = -05%; f2 = -10%; f3 = -15%; f4 = -20%; f5 = -30%;
}

// Feat -> Custom colors for message bubble.
in_msg_quote  = dark(IM) ? -10% : 25%
out_msg_quote = dark(OM) ? -10% : 25%

// Generate tones for colors.
bg = {
    '-0': _d(BG, b1),
    '-1': _d(BG, 0%),
    '-2': _d(BG, b2),
    '-3': _d(BG, b3),
    '-4': _d(BG, b4),
    '-5': _d(BG, b5),
}
fg = {
    '-0': _d(FG, f1),
    '-1': _d(FG, 0%),
    '-2': _d(FG, f2),
    '-3': _d(FG, f3),
    '-4': _d(FG, f4),
    '-5': _d(FG, f5),
}
ac = {
    '-0':                 AC,
    '-1': mix(_d(BG, -4), AC, a1),
    '-2': mix(_d(BG, -4), AC, a2),
    '-3': mix(_d(BG, -4), AC, a3),
    '-4': mix(_d(BG, -4), AC, a4),
    '-5': mix(_d(BG, -4), AC, a5),
}
msg-in = {
    '-0':    IM,
    '-1': _d(IM, in_msg_quote),
}
msg-out = {
    '-0':    OM,
    '-1': _d(OM, out_msg_quote),
}

// Generate stylus-lang variables.
define('bg'      + key, val) for key, val in bg
define('fg'      + key, val) for key, val in fg
define('ac'      + key, val) for key, val in ac
